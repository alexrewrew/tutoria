@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  transitions()
  &:focus
    outline none

.button
  display block
  width 236px
  border-radius: 100px;
  text-align center

  background $yellow
  color $white

  padding-top 11px
  padding-bottom 12px

  margin-bottom 1rem

  &:hover
    color $black
    background $gray