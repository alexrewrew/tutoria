@import "../../utilities/vars"
@import "../../utilities/mixins"

button
  border none
  cursor pointer
  transitions()
  &:focus
    outline none

.button
  display block
  width 236px
  border-radius: 100px;
  text-align center
  border 2px solid $yellow

  background $yellow
  color $white

  padding-top 9px
  padding-bottom 10px

  margin-bottom 1rem

  &:hover
    color $black
    background $trans

.button-white
  background $white
  color $black
  font-size 1.125rem
  width 159px
  border 2px solid $white
  &:hover
    background $yellow