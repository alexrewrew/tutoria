@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom 1.75rem
  margin-top .875rem
  border none
  border-bottom 2px dotted $white
  padding 10px 0 10px
  background $trans
  transitions()
  font-size 1.125rem
  color $white
  &:focus
    outline none
  +placeholder()
    color $white
    opacity .5
  +mobile()
    margin-top 0
    margin-bottom 1.5rem


textarea
  -webkit-appearance none
  resize none
  margin-bottom 1.35rem
  width 100%
  height 140px
  margin-top .5rem
  padding 11px 0 12px
  border none
  border-bottom 2px dotted $black
  background $trans
  +placeholder()
    color $black
    opacity .5
  &:focus
    outline none

label {}

.input-two
  display flex
  justify-content space-between
  margin-bottom .875rem
  +mobile()
    flex-wrap wrap
  input
    flex 1 1 47%
    max-width 47%
    +mobile()
      flex 1 1 100%
      max-width 100%
