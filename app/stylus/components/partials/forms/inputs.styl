@import '../../utilities/vars'
@import '../../utilities/mixins'

input
  -webkit-appearance none
  width 100%
  margin-bottom 1.75rem
  margin-top .875rem
  border none
  border-bottom 2px dotted $white
  padding 10px 0 10px
  background $trans
  transitions()
  font-size 1.125rem
  color $white
  &:focus
    outline none
  +placeholder()
    color $white
    opacity .5
  +mobile()
    margin-top 0
    margin-bottom 1.5rem


textarea
  -webkit-appearance none
  resize none
  margin-bottom 1rem
  width 100%
  height 250px
  padding 11px 15px 12px
  +placeholder()
    color $gray
  &:focus
    outline none
    border-color green

label {}