@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
@import "../libs/rew-downnav/downnav.styl"

nav
  position fixed
  left 0
  right 0
  top 0
  z-index 200
  transitions()
  padding 27px 0

nav.nav-scroll
  padding 12px 0
  background $white
  box-shadow: 0px 2px 1px 0px rgba(0,0,0,0.25);
  .link-logo
    padding 10px 5px


.nav-panel
  display flex
  +mobile()
    display none

.menu
  list-flex(row)
  height 100%
  width 50%
  align-items center
  +mobile()
    flex-direction column
    justify-content flex-start
    align-items flex-start
    width 100%
    height auto
  li
    margin-right 49px
    +mobile()
      margin 0
    &:last-child
      margin-right 0
    a
      display block
      font-size $s18
      color $black

.menu-button
  width 50%
  list-flex(row)
  height 100%
  justify-content flex-end
  align-items center
  +mobile()
    width 100%
    height auto
  li
    .button
      margin-bottom 0

.nav-mobile
  display none
  +mobile()
    display block


.nav-icon
  width 30px
  height 22px
  position relative
  margin 14px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $black
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%

.birds
  position absolute
  top 25px
  left 50px
  z-index 300