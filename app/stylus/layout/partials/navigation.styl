@import '../../utilities/vars'
@import '../../utilities/mixins'

//@import "../libs/rew-sidenav/sidenav.styl"
@import "../libs/rew-downnav/downnav.styl"

nav
  position fixed
  left 0
  right 0
  top 0
  z-index 200
  transitions()
  padding 27px 0
  +mobile()
    padding 3px 0
    background $white

nav.nav-scroll
  padding 12px 0
  background $white
  box-shadow: 0px 2px 1px 0px rgba(0,0,0,0.25);
  +mobile()
    padding 3px 0
    box-shadow none
  .link-logo
    padding 10px 5px
    +mobile()
      padding: 13px 0;
      box-shadow none
  .menu
    li
      a
        +mobile()
          color $black
        &:hover
          color $yellow
          +mobile()
            color $yellow
      .active
        color $yellow
  .menu-button
    li
      a
        border 2px solid $yellow


.nav-panel
  display flex
  +mobile()
    display none
    padding 50px 15px

.menu
  list-flex(row)
  height 100%
  width 60%
  align-items center
  +mobile()
    flex-direction column
    justify-content flex-start
    align-items flex-start
    width 100%
    height auto
  +portrait()
    flex-wrap wrap
  li
    margin-right 49px
    +mobile()
      margin 0
      display block
      width 100%
      margin-bottom 1rem
    +portrait()
      flex 1 1 30%
      max-width 30%
    &:last-child
      margin-right 0
    a
      display block
      font-size $s18
      color $black
      +mobile()
        font-size 2rem
        text-align center
      &:hover
        color $white
        +mobile()
          color $yellow
    .active
      color $white
      +mobile()
        color $yellow

.menu-button
  width 40%
  list-flex(row)
  height 100%
  justify-content flex-end
  align-items center
  +mobile()
    width 100%
    height auto
    justify-content center
    margin 1rem 0
  li
    .button
      margin-bottom 0
      border 2px solid $white
      +mobile()
        font-size 1.5rem
        border-color $yellow
        width 290px

.nav-mobile
  display none
  +mobile()
    display block


.nav-icon
  width 50px
  height 22px
  position relative
  margin 14px 0
  cursor pointer
  transitions()
  transform rotate(0deg)
  float right
  span
    display block
    position absolute
    height 3px
    width 100%
    background $yellow
    border-radius 2px
    opacity 1
    left 0
    transform rotate(0deg)
    transitions()
    &:nth-child(1)
      top 0px
    &:nth-child(2), &:nth-child(3)
      top 9px
    &:nth-child(4)
      top 18px

.nav-icon.open
  span
    &:nth-child(1)
      top 18px
      width 0%
      left 50%
    &:nth-child(2)
      transform rotate(45deg)
    &:nth-child(3)
      transform rotate(-45deg)
    &:nth-child(4)
      top 18px
      width 0%
      left 50%

.birds
  position absolute
  top 25px
  left 50px
  z-index 300
  +mobile()
    display none