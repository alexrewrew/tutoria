.menu
  .dropdown-link
    position relative
    z-index 20

.dropdown-panel
  position absolute
  background $white
  left 0
  top 100%
  width 720px
  padding 15px
  transition .6s all ease

  transform translateY(-200vh)

  +mobile()
    display none
  li
    a
      padding 0
      font-size .938rem
      color $black
      display block
      &:hover
        color $yellow !important
  &--head-link
    font-size 1.125rem
    font-weight 700
    color $black
    padding 0
    padding-bottom 13px
    border-bottom 2px solid $yellow
    margin-bottom 14px
    color $black
    display block
    &:hover
      color $yellow
  &--subhead-link
    font-weight 700
    margin-bottom 3px
    padding 0
    color $black
    display block
    &:hover
      color $yellow
  ul
    margin-bottom 19px
    li
      margin-bottom 3px

.dropdown-panel.visible
    transform none