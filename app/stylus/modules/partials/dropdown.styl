.menu
  li a
    padding 22px 0
  .dropdown-link
    position relative
    z-index 20
    padding-top 0
    padding-bottom 0
    margin-bottom: 22px;
    margin-top: 22px;
    &:after, &:before
      pseudo(block,absolute)
      right: -16px;
      top: 10px;
      width 9px
      height 2px
      background $black
      transform rotate(45deg)
      transitions()
      +mobile()
        display none
    &:after
        transform rotate(-45deg)
        right -21px
    &:hover
      &:before, &:after
        background $white
  .dropdown-link.active
    padding-bottom 22px
    margin-bottom 0
    color $white
    &:before, &:after
      background $white


.dropdown-panel
  position absolute
  background $white
  left 0
  top 100%
  width 720px
  padding 15px
  transition .4s all ease
  box-shadow: 0px 2px 1px 0px rgba(0,0,0,0.25);

  opacity 0
  visibility hidden
  z-index -1

  +mobile()
    display none
  li
    a
      padding 0
      font-size .938rem
      color $black
      display block
      &:hover
        color $yellow !important
  &--head-link
    font-size 1.125rem
    font-weight 700
    color $black
    padding 0
    padding-bottom 13px
    border-bottom 2px solid $yellow
    margin-bottom 14px
    color $black
    display block
    &:hover
      color $yellow
  &--subhead-link
    font-weight 700
    margin-bottom 3px
    padding 0
    color $black
    display block
    &:hover
      color $yellow
  ul
    margin-bottom 19px
    li
      margin-bottom 3px

.dropdown-panel.visible
  opacity 1
  visibility visible
  z-index 100
