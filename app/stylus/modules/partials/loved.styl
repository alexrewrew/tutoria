.section-loved
  position relative
  overflow hidden
  background $purple
  margin-bottom: 4.5rem
  &--block
    padding-top 3.875rem
    padding-bottom 5.6rem
    h2
      color $white
    ul li
      color $white
      font-size 1.125rem
      line-height 1.125
      margin-bottom 1.5rem
  .loved-back
    position absolute
    top 0
    right: -135px;
    +custom-min(1600px)
      right 0
    +mobile()
      display none

.purple-black
  background $purple
